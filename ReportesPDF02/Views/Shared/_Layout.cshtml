<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>cibertec.edu.pe</title>
    <link href="~-images/pi-favicon.gif" rel="shortcut icon" type="image/gif" />

    <link href="~/jq/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/jq/bootstrap/bootstrap-icons.min.css" rel="stylesheet" />

    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid">
        @RenderBody()

    </div>

    <div class="modal fade show" id="dlg_message" style="display:none">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-light">
                    <h5 class="modal-title" id="dlg_message_title">Mensaje</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div id="dlg_message_msg" class="p-4 text-center"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade show" id="dlg_confirm" style="display:none">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-light">
                    <h5 class="modal-title" id="dlg_confirm_title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div id="dlg_confirm_msg" class="p-4 text-center"></div>
                            <input type="hidden" id="dlg_confirm_dato1" />
                            <input type="hidden" id="dlg_confirm_dato2" />
                            <div id="dlg_confirm_error" class="alert alert-danger m-3 p-3 text-center"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" onclick="dlg_confirm_confirm();">Si</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/jq/jquery-3.6.0.min.js"></script>
    <script src="~/jq/bootstrap/bootstrap.bundle.min.js"></script>

    <script src="~/js/main.js"></script>

</body>
</html>
